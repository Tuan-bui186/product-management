mixin form-change-multi(path)
    form(
        action= path
        method="POST"
        form-change-multi 
        ) 
                .d-flex.algin-items-start
                    .form-group
                        select(name="type" class ="form-control") 
                            option(value="active") Hoạt đông
                            option(value="inactive") Dừng hoạt đông
                    .form-group
                        input(
                            type = "text"
                            name = "ids"
                            value = ""
                            class = "form-control d-none"
                        )
                    button(type = "submit" class ="btn btn-primary") Áp dụng
                    

