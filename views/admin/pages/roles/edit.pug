extends ../../layouts/default.pug
include ../../mixins/alert-success.pug

block main
    if(role.permissions.includes("roles-edit"))
        +alert-success(5000)
        +alert-error(5000)
        
        h1(class=".mb-4") Chỉnh sửa nhóm quyền
        form(
            action = `${prefixAdmin}/roles/edit/${records.id}?_method=PATCH`
            method = "POST"
        )
            div(class = "form-group")
                label(for="title") Tiêu đề
                input(
                    type = "text"
                    class = "form-control"
                    id = "title"
                    name = "title"
                    value = records.title
                    required
                )
            div(class = "form-group")
                label(for="desc") Mô tả
                input(
                    class = "form-control"
                    id = "desc"
                    name = "description"
                    type = "text"
                    value = records.description
                )
            div(class = "form-group")
                button(
                    type = "submit"
                    class = "btn btn-primary"
                ) Cập nhật