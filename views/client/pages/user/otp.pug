extends ../../layouts/default.pug

block main 
    +alert-success(5000)
    +alert-error(5000)
    .container.my-5
        .row.justify-content-center
            .col-8
                h1(class = "text-center")  Nhập mã OTP xác thực
                form(
                    action =  `/user/password/otp`
                    method = "POST"
                )
                    div(class = "form-group")
                        label(for = "email") Email
                        input(
                            type = "email"
                            name = "email"
                            id = "email"
                            class = "form-control"
                            value = email
                            readonly
                        )
                    div(class = "form-group")
                        label(for = "otp") OTP
                        input(
                            type = "text"
                            name = "otp"
                            id = "otp"
                            class = "form-control"
                            required
                        )
                    div(class = "form-group")
                        button(
                            class = "btn btn-primary btn-block"
                            type = "submit"
                        ) Xác nhận
